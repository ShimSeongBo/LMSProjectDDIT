<!-- 역대전체강의 목록 -->
<select id="AllTimeLectrueList" resultMap="AllTimeLectruesMap">
SELECT
		  LA.LECA_YR
		, CASE WHEN SUBSTR(LA.LECA_SEM ,4,2) BETWEEN 3 AND 6 THEN 1
		          WHEN SUBSTR(LA.LECA_SEM ,4,2) BETWEEN 9 AND 12 THEN 2
		          ELSE NULL 
		          END AS LECA_SEM
		, C.COL_NM
		, D.DEP_NM
		, S.SUB_NM
		, LA.LECA_CATE
		, LA.LECA_NM
		, CONCAT(CONCAT(P.PRO_POS, ' '), E.EMP_NM) AS EMP_NM
		, LA.LECA_TRG
		, LA.LECA_CRD
		, L.LEC_YN
		, L.LEC_HCNT
FROM LECTURE L, LEC_APPLY LA, SUBJECT S, DEPARTMENT D, COLLEGE C, PROFESSOR P, EMPLOYEE E
WHERE
		 L.LECA_CD = LA.LECA_CD
		AND S.DEP_CD = L.DEP_CD
		AND L.DEP_CD = D.DEP_CD
		AND D.COL_CD = C.COL_CD 
		AND S.PRO_NO = P.PRO_NO
		AND P.PRO_NO = E.EMP_NO
		<if test="lecYn != null and lecYn != ' ' ">
		AND L.LEC_YN = #{lecYn} 	
		</if>
		<if test="lecaYr != null and lecaYr != ' ' ">
		TO_NUMBER(TO_CHAR(SYSDATE,'YYYY')) = #{lecaYn}
		</if>
		<if test="lecaSem != null and lecaSem ' ' ">
		(CASE WHEN SUBSTR(LA.LECA_SEM ,4,2) BETWEEN 3 AND 6 THEN 1
          WHEN SUBSTR(LA.LECA_SEM ,4,2) BETWEEN 9 AND 12 THEN 2
          ELSE NULL 
          END) = #{lecaSem}
		</if>
		<if test="colNm != null and colNm != ' ' ">
		C.COL_NM = #{colNm}
		</if>
		<if test="depNm != null and depNm != ' ' ">
		D.DEP_NM = #{depNm}
		</if>
		<if test="subNm != null and subNm != ' ' ">
		S.SUB_NM = #{subNm}
		</if>
		<if test="lecaCate != null and lecaCate != ' ' ">
		LA.LECA_CATE = #{lecaCate}
		</if>
		<if test="lecaNm != null and lecaNm != ' ' ">
		LA.LECA_NM LIKE '%' || #{lecaNm} || '%'
		</if>
		<if test="empNm != null and empNm != ' ' ">
		 E.EMP_NM LIKE '%' || #{empNm} || '%'
		</if>
</select>

