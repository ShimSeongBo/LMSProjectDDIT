    <!-- 공지사항 등록 -->
    <select id="noticeBasicSave" resultType="NoticeBasic">

        INSERT INTO NOTICE_BASIC (NOTICE_CD,
                                  NOTICE_TTL,
                                  NOTICE_REG,
                                  NOTICE_UPD,
                                  NOTICE_CON)

        VALUES (NOTICEBASIC_SEQ.NEXTVAL,
                #{noticeTtl},
                SYSDATE,
                SYSDATE,
                #{noticeCon})
    </select>

    <!-- 공지사항 수정 -->
    <update id="noticeBasicUpdate" parameterType="NoticeBasic">
        UPDATE NOTICE_BASIC
        SET
            NOTICE_TTL = #{noticeTtl},
            NOTICE_CON = #{noticeCon},
            NOTICE_UPD = SYSDATE
        WHERE
            NOTICE_CD = #{noticeCd}
    </update>

    <!-- 공지사항 삭제 -->
    <delete id="noticeBasicDelete">
        DELETE
        FROM NOTICE_BASIC
        WHERE NOTICE_CD = #{noticetCd}
    </delete>

