<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 
		[마이바티스] 스프링에서 "_"를 사용한 컬럼명을 사용 시 (BOOK 테이블의 BOOK_ID)
			카멜케이스로 읽어줌(bookId)
			ex) 테이블컬럼명이 member_id인 경우 jsp 화면단에서 이 값을 사용 시
						memberId로 사용
	-->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	<!-- 자주 사용하는 타입의 별칭을 세팅 -->
	<typeAliases>
		<typeAlias type="kr.or.ddit.domain.Lecture" alias="lecture"/><!-- 강의 공지사항 -->
		<typeAlias type="kr.or.ddit.domain.LecApply" alias="lecApply"/><!-- 강의 공지사항 -->
		<typeAlias type="kr.or.ddit.domain.LecNotice" alias="LecNotice"/><!-- 강의 공지사항 -->
		<typeAlias type="kr.or.ddit.domain.LecQna" alias="LecQna"/><!-- 질문 게시판 -->
		<typeAlias type="kr.or.ddit.domain.Approval" alias="Approval"/><!-- 결재 게시판 -->
		<typeAlias type="kr.or.ddit.domain.College" alias="College"/><!-- 단과대학 테이블 -->
		<typeAlias type="kr.or.ddit.domain.Counsel" alias="Counsel"/><!-- 상담 테이블 -->
	</typeAliases>
</configuration>